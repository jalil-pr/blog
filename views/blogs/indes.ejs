<% include ../partials/header%>

  <div class="container">
	<div class="row">
        <%posts.forEach(function(post){%>
         
          <div class="col-sm-6 col-md-4" >
			
				<a href="/post/<%=post._id%>"><h1><%=post.title%></h1></a>
				<strong><%=post.creation_date%></strong>
				<a href="/post/<%=post._id%>">
				   <img src="<%=post.url%>">
				</a>
				<p><%=post.description%></p>
				
		  </div>
         


        <%})%>


		
	</div>
	
</div>

